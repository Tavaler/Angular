@model DPizza.Data.Products

@{
    ViewData["Title"] = "Edit";
}

@if (TempData["ChkError"] != null)
{
    <script>
        swal("Oops", "รหัสซ้ำ!", "error")
    </script>
}

<h1>Edit</h1>

<h4>Products</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="ProductImage" class="control-label"></label>
                    <input asp-for="ProductImage" class="form-control" />
                    <span asp-validation-for="ProductImage" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="ProductImage" class="control-label"></label>
                <input name="UpFile" accept="image/*" type="file" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="PrId" class="control-label"></label>
                <select asp-for="PrId" class="form-control" asp-items="ViewBag.PrId"></select>
                <span asp-validation-for="PrId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PtypeId" class="control-label"></label>
                <select asp-for="PtypeId" class="form-control" asp-items="ViewBag.PtypeId"></select>
                <span asp-validation-for="PtypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}